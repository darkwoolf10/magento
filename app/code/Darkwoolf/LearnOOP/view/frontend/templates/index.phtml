<div>
    <h2>File List:</h2>
    <?php
    /**
     * @var \Darkwoolf\LearnOOP\Block\LessonOopBlock $block
     */
    foreach ($block->getFileList() as $filename) {
        echo '<span>' . $filename . 'Date of creation/change:' . date('F d Y H:i:s.', filemtime($filename)) . '</span><br/>';
    }
    ?>

    <h2>Constants:</h2>
    <?php
    foreach ($block->getConstants() as $constant) {
        echo '<span>' . $constant . '</span><br/>';
    }
    ?>

    <h2>Public methods:</h2>
    <?php
    foreach ($block->getMethods(ReflectionMethod::IS_PUBLIC) as $method) {
        echo '<span>' . $method->name . '</span><br/>';
    }
    ?>

    <h2>Parameters:</h2>
    <?php
    foreach ($block->getParameters() as $parametersName => $parametersValue) :
        if (is_array($parametersValue)) {
            $parametersValue = $parametersValue['instance'] ?? 'array';
        }
        echo '<span>' . $parametersName . ':' . $parametersValue . '</span><br/>';
        ?>
    <?php endforeach; ?>
</div>
