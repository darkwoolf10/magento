<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="custom.darkwoolf.container">
            <block class="Magento\Cms\Block\Block"
                   name="darkwoolf.cms.block"
                   after="darkwoolf_image">
                <arguments>
                    <argument name="block_id" xsi:type="string">darkwoolf_custom_block</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block"
                   name="promo.label"
                   after="subscribe">
                <arguments>
                    <argument name="block_id" xsi:type="string">promo_label</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
